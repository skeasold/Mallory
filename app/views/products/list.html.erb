
<style>
img {
  width: 40px;
  height: 40px;
}
</style>
<p>
  Products
</p>

<ul>
  <% @products.each do |product| %>
    <li>
      <%= product.name %>
      <%= product.price %>
      <%= link_to "More Info", "products/#{product.pid}" %>
      <%= product.quantity %>
      <img><%= image_tag "#{product.img_file}" %></img>
    </li>
  <% end %>
</ul>
