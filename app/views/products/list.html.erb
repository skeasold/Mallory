<div class="corner_nav">
  <ul>
    <li>
      <%= link_to "/" do %>
        <span class="glyphicon glyphicon-home"></span>
      <% end %>
    </li>
    <li>
      <%= link_to "/products" do %>
        <span class="glyphicon glyphicon-arrow-left"></span>
      <% end %>
    </li>
  </ul>
</div>

<div class="container">
  <div class="row">
    <% @products.each do |product| %>
    <div class="col-sm-3 center-block">
      <div class="inner_wrap">
        <div class="thumbnail center-block">
          <img><%= image_tag "#{product.img_file}" %></img>
        </div>
        <h5><%= product.name %></h5><br>
        <% if product.discount_price.to_s.empty? %>
          <%= number_to_currency(product.price.to_i) %>
        <% else %>
          <span class="old">Was: <%= number_to_currency(product.price.to_i) %></span><br>
          <span class="new">Clearance: <%= number_to_currency(product.discount_price.to_i) %></span>
        <% end %><br>
        <%= link_to "More Info", "/products/#{product.pid}", :class => "btn btn-default btn-sm" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
